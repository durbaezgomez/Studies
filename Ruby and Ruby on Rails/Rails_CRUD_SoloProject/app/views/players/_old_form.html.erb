<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>
      <ul>
      <% player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :name, :class => "control-label col-md-1" %>
  <%= form.text_field :name, :class => "col-md-3" %>
</div>

<div class="field">
  <%= form.label :surname, :class => "control-label col-md-1" %>
  <%= form.text_field :surname, :class => "col-md-3" %>
</div>

<div class="field">
  <%= form.label :nickname, :class => "control-label col-md-1" %>
  <%= form.text_field :nickname, :class => "col-md-3" %>
</div>

<div class="field">
  <%= form.label :salary, :class => "control-label col-md-1" %>
  <%= form.text_field :salary, :class => "col-md-3" %>
</div>

<div class="field">
  <%= form.label "Birthday", :class => "control-label col-md-1" %>
  <%= form.date_select :date_of_birth, :start_year=>1900, :order=>[:day, :month, :year] %>
</div>
<div class="field" style="margin-top: 10px;">
  <%= form.submit 'Save', :class => "btn btn-success btn-sm" %>
</div>
<% end %>
